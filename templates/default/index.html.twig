{% extends 'base.html.twig' %}

{% block title %}BTC Prices{% endblock %}

{% block body %}
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100 my-5">
            <div class="col-lg-10">
                <div class="p-5 shadow rounded-5">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">30 day BTC price history</h2>
                        <h4 id="currentBtcPrice" class="mb-0"></h4>
                    </div>
                    <hr class="mb-4"/>
                    <canvas id="btcPricesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
